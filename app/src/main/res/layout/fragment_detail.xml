<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.learning.jonathan.popularmovies.DetailAcivityFragment">

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:textSize="40dip"
        android:background="@color/headerBackGround"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:paddingLeft="20dp"
        android:layout_alignParentTop="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            <TextView
                android:id="@+id/detail_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/detail_average_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:layout_below="@+id/detail_release_date"
                android:textSize="16dp"/>
            <ImageView
                android:id="@+id/detail_image_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_alignParentRight="true"
                android:minHeight="275dp" />
            <TextView
                android:id="@+id/detail_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_below="@+id/detail_image_poster"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>


